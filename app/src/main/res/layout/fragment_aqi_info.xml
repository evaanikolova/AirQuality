<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.aqi_info.AQIInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:text="AQI"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Air Pollution Level"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Health Implications"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:background="@color/good">
                <TextView
                    android:text="0 - 50"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Good"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Air quality is considered satisfactory, and air pollution poses little or no risk."
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>
            </TableRow>
            <TableRow
                android:background="@color/moderate">
                <TextView
                    android:text="51 -100"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"/>
                <TextView
                    android:text="Moderate"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"/>
                <TextView
                    android:text="Air quality is acceptable; however, for some pollutants there may be a moderate health concern for a very small number of people who are unusually sensitive to air pollution."
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:background="@color/unhealthy_one">
                <TextView
                    android:text="101-150"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"/>
                <TextView
                    android:text="Unhealthy for Sensitive Groups"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"/>
                <TextView
                    android:text="Members of sensitive groups may experience health effects. The general public is not likely to be affected."
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:background="@color/unhealthy_two">
                <TextView
                    android:text="151-200"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Unhealthy"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Everyone may begin to experience health effects; members of sensitive groups may experience more serious health effects."
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>
            </TableRow>
            <TableRow
                android:background="@color/very_unhealthy">
                <TextView
                    android:text="201-300"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Very Unhealthy"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Health warnings of emergency conditions. The entire population is more likely to be affected."
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>
            </TableRow>
            <TableRow
                android:background="@color/hazardous">
                <TextView
                    android:text="300+"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Hazardous"
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Health alert: everyone may experience more serious health effects."
                    android:padding="9dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</FrameLayout>